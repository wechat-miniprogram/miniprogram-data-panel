/* pages/index/index.wxss */

page {
  background-color: #f5f5f5;
}
.choice_item {
  padding: 48rpx 32rpx 0 32rpx;
}
.choice_item:last-child {
  padding-bottom: 32rpx;
}
.choice_item .choice_item_name {
  opacity: 0.5;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #000000;
  letter-spacing: 0;
  line-height: 42rpx;
  margin-bottom: 24rpx;
}
.choice_item .choice_card {
  background: #FFFFFF;
  border-radius: 16rpx;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  display: flex;
  margin-bottom: 24rpx;
}
.choice_item .choice_card:last-child {
  margin-bottom: 0;
}
.choice_card .choice_logo {
  width: 120rpx;
  margin-right: 32rpx;
}
.choice_logo image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.choice_card .choice_text {
  flex: 1;
}
.choice_card .choice_text .mini_name{
  opacity: 0.9;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #000000;
  letter-spacing: 0;
  line-height: 42rpx;
}
.choice_card .choice_text .mini_mail{
  opacity: 0.5;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #000000;
  letter-spacing: 0;
  line-height: 44rpx;
}
.choice_card .choice_text .mini_des{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: rgba(0,0,0,0.30);
  letter-spacing: 0;
  line-height: 39.2rpx;
}
