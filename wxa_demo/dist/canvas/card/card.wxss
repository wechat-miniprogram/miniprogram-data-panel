  /* white-space:nowrap; */
  overflow: hidden;

  display: flex;
}

.status-content-number-td{
  /*display: inline-block;*/
  /*width: 165rpx;*/
  flex: 1;
  background-color: #FFFFFF;
  padding-right: 25rpx;
  /* margin-bottom: 28rpx; */
  /*margin: 5rpx 0 5rpx 25rpx;*/
